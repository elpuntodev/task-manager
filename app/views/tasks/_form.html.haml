-# frozen_string_literal: true
= simple_form_for(@task) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name
    = f.input :description
    = f.input :due_date
    = f.association :category
    #addParticipants
      = link_to_add_association f, :participanting_users, 'data-association-insertion-node' => '.participants .participants-container', 'data-turbolinks' => false do
        agregar participante
    .participants
      = simple_form_for :participanting_users do |g|
        = render 'participanting_user_fields', f: g
      .participants-container
  .form-actions
    = f.button :submit
